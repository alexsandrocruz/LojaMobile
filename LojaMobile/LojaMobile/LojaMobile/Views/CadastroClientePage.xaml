<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LojaMobile.Views.CadastroClientePage"
             BackgroundColor="{StaticResource corFundo}">
  <StackLayout>
    <Entry Placeholder="Nome" Text="{Binding Nome}"></Entry>
    <Entry Placeholder="CPF" Text="{Binding CPF}"></Entry>
    <Entry Placeholder="Telefone" Keyboard="Telephone" Text="{Binding Telefone}"></Entry>
    <Button  Text="Carregar" Command="{Binding Salvar}"></Button>
  </StackLayout>
</ContentPage>